<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4"
    tools:context="com.example.swagata.lockscreen.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/number_one"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="130dp"
                android:background="@drawable/button"
                android:onClick="numberOnClick"
                android:text="1"
                android:textSize="30sp" />

            <Button
                android:id="@+id/number_two"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/button"
                android:onClick="numberOnClick"
                android:text="2"
                android:textSize="30sp" />

            <Button
                android:id="@+id/number_three"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:layout_marginLeft="60dp"
                android:background="@drawable/button"
                android:onClick="numberOnClick"
                android:text="3"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/number_four"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="40dp"
                android:layout_weight="0"
                android:background="@drawable/button"
                android:onClick="numberOnClick"
                android:text="4"
                android:textSize="30sp"
                />

            <Button
                android:id="@+id/number_five"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:background="@drawable/button"
                android:onClick="numberOnClick"
                android:layout_weight="0"
                android:text="5"
                android:textSize="30sp"
                />
            <Button
                android:id="@+id/number_six"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:background="@drawable/button"
                android:onClick="numberOnClick"
                android:layout_weight="0"
                android:text="6"
                android:textSize="30sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/number_seven"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/button"
                android:onClick="numberOnClick"
                android:text="7"
                android:textSize="30sp"
                />

            <Button
                android:id="@+id/number_eight"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:background="@drawable/button"
                android:onClick="numberOnClick"
                android:text="8"
                android:textSize="30sp"
                />
            <Button
                android:id="@+id/number_nine"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:background="@drawable/button"
                android:onClick="numberOnClick"
                android:text="9"
                android:textSize="30sp"
                />
        </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

                <Button
                    android:id="@+id/number_zero"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="170dp"
                    android:background="@drawable/button"
                    android:onClick="numberOnClick"
                    android:layout_weight="0"
                    android:text="0"
                    android:textSize="30sp"
                    />
            </LinearLayout>
        </LinearLayout>


